{
  "name": "Rust Development Container",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/opt/app",

  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",  // Rust Analyzer: Rust Language Server
        "vadimcn.vscode-lldb",  // LLDB Debugger: Native debugger for Rust
        "serayuzgur.crates",  // Crates: Cargo.toml dependencies viewer
        "streetsidesoftware.code-spell-checker", // Code Spell Checker: Spelling checker for source code
        "tamasfe.even-better-toml",  // Even Better TOML: TOML language
        "oderwat.indent-rainbow",  // Indent Rainbow: Colorizes indentation in source code
        "github.copilot",  // GitHub Copilot: AI pair programmer
        "github.copilot-chat",  // GitHub Copilot Chat: Chat with GitHub Copilot
        "christian-kohler.path-intellisense",  // Path Intellisense: Autocompletes filenames
        "shardulm94.trailing-spaces",  // Trailing Spaces: Highlights trailing spaces
        "eamodio.gitlens",  // GitLens: Git supercharged
        "donjayamanne.githistory",  // Git History: View and search Git history
        "mhutchie.git-graph",  // Git Graph: View a Git Graph of your repository
        "leodevbro.blockman",  // Blockman: Block comment/uncomment
        "pkief.material-icon-theme"  // Material Icon Theme: Material Design icons
      ]
    }
  }
}